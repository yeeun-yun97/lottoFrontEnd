<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp">

    <TextView
        android:id="@+id/savedNumbersItem_firstBall"
        style="@style/smallNumberBall"
        android:background="@drawable/item_ball_background"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/savedNumbersItem_secondBall"
        style="@style/smallNumberBall"
        android:background="@drawable/item_ball_background"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/savedNumbersItem_firstBall"
        app:layout_constraintStart_toEndOf="@+id/savedNumbersItem_firstBall"
        app:layout_constraintTop_toTopOf="@+id/savedNumbersItem_firstBall" />

    <TextView
        android:id="@+id/savedNumbersItem_thirdBall"
        style="@style/smallNumberBall"
        android:background="@drawable/item_ball_background"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@+id/savedNumbersItem_secondBall"
        app:layout_constraintStart_toEndOf="@+id/savedNumbersItem_secondBall"
        app:layout_constraintTop_toTopOf="@+id/savedNumbersItem_secondBall" />

    <TextView
        android:id="@+id/savedNumbersItem_fourthBall"
        style="@style/smallNumberBall"
        android:layout_marginStart="30dp"
        android:background="@drawable/item_ball_background"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="@+id/savedNumbersItem_thirdBall"
        app:layout_constraintStart_toEndOf="@+id/savedNumbersItem_thirdBall"
        app:layout_constraintTop_toTopOf="@+id/savedNumbersItem_thirdBall" />

    <TextView
        android:id="@+id/savedNumbersItem_fifthBall"
        style="@style/smallNumberBall"
        android:layout_marginStart="19dp"
        android:background="@drawable/item_ball_background"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="@+id/savedNumbersItem_fourthBall"
        app:layout_constraintStart_toEndOf="@+id/savedNumbersItem_fourthBall"
        app:layout_constraintTop_toTopOf="@+id/savedNumbersItem_fourthBall" />

    <TextView
        android:id="@+id/savedNumbersItem_sixthBall"
        style="@style/smallNumberBall"
        android:layout_marginStart="20dp"
        android:background="@drawable/item_ball_background"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="@+id/savedNumbersItem_fifthBall"
        app:layout_constraintStart_toEndOf="@+id/savedNumbersItem_fifthBall"
        app:layout_constraintTop_toTopOf="@+id/savedNumbersItem_fifthBall" />

    <TextView
        android:id="@+id/savedNumbersItem_resultTextView"
        style="@style/mediumTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="낙첨"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>