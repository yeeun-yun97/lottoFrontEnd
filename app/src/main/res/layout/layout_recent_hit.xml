<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recentHitLayout_hitDateTextView">

        <TextView
            android:id="@+id/recentHitLayout_firstBall"
            style="@style/RecentRoundNumberBall"
            android:background="@drawable/item_ball_background"
            android:text="1" />

        <TextView
            android:id="@+id/recentHitLayout_secondBall"
            style="@style/RecentRoundNumberBall"
            android:background="@drawable/item_ball_background"
            android:text="2" />

        <TextView
            android:id="@+id/recentHitLayout_thirdBall"
            style="@style/RecentRoundNumberBall"
            android:background="@drawable/item_ball_background"
            android:text="3" />

        <TextView
            android:id="@+id/recentHitLayout_fourthBall"
            style="@style/RecentRoundNumberBall"
            android:background="@drawable/item_ball_background"
            android:text="4" />

        <TextView
            android:id="@+id/recentHitLayout_fifthBall"
            style="@style/RecentRoundNumberBall"
            android:background="@drawable/item_ball_background"
            android:text="5" />

        <TextView
            android:id="@+id/recentHitLayout_sixthBall"
            style="@style/RecentRoundNumberBall"
            android:background="@drawable/item_ball_background"
            android:text="6" />

        <TextView
            android:id="@+id/recentHitLayout_splitTextView"
            style="@style/mediumTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="+" />

        <TextView
            android:id="@+id/recentHitLayout_bonusBall"
            style="@style/RecentRoundNumberBall"
            android:layout_marginStart="16dp"
            android:background="@drawable/item_ball_background"
            android:text="7" />
    </LinearLayout>

    <TextView
        android:id="@+id/recentHitLayout_titleTextView"
        style="@style/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="nnn회 당첨결과"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/recentHitLayout_hitDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(2021년 06월 12일 추첨)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recentHitLayout_titleTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>