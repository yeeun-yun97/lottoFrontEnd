<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="maxTitleTextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="titleTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NumberTextView">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="mediumTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="littleTextView">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="longButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginVertical">5dp</item>
    </style>

    <style name="numberBall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">15dp</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>

    <style name="smallNumberBall">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="RecentRoundNumberBall">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">8dp</item>
    </style>


</resources>